{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Ply Server with Ngrok (Script)",
      "type": "node-terminal",
      "request": "launch",
      "command": "${workspaceFolder}/dev.sh",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Ply Server - Local (FastAPI)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "7153",
        "--reload"
      ],
      "jinja": true,
      "envFile": "${workspaceFolder}/.env.local",
      "cwd": "${workspaceFolder}"
    }
  ]
}
